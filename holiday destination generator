    <div class="container">
        <div class="app-header">üåç Tap for Your Next Adventure!</div>
        
        <div class="destination-card" onclick="generateDestination()">
            <div class="destination-visual" id="destinationVisual">
                <div class="destination-emoji">‚úàÔ∏è</div>
                <div class="destination-name placeholder">Tap to Discover</div>
                <div class="destination-tagline placeholder">Your adventure awaits!</div>
            </div>
            
            <div class="tap-instruction">üëÜ Tap Card Above</div>
            
            <div class="social-actions">
                <button class="social-btn" onclick="shareDestination(event)">üì± Share</button>
                <button class="social-btn" onclick="copyToClipboard(event)">üìã Copy</button>
                <button class="social-btn" onclick="saveImage(event)">üíæ Save</button>
            </div>
        </div>

        <div class="counter" id="counter">Destinations discovered: 0</div>
    </div>

    <div class="share-modal" id="shareModal">
        <div class="share-content">
            <h3>Share Your Destination!</h3>
            <div class="share-options">
                <a href="#" class="share-option" id="shareInstagram">üì∏ Instagram</a>
                <a href="#" class="share-option" id="shareFacebook">üìò Facebook</a>
                <a href="#" class="share-option" id="shareTwitter">üê¶ Twitter</a>
                <a href="#" class="share-option" id="shareWhatsApp">üí¨ WhatsApp</a>
            </div>
            <button class="close-modal" onclick="closeShareModal()">Close</button>
        </div>
    </div>

    <script>
        const destinations = [
            { name: "Santorini", emoji: "üèõÔ∏è", tagline: "White cliffs meet azure seas" },
            { name: "Tokyo", emoji: "üå∏", tagline: "Where tradition meets innovation" },
            { name: "Bali", emoji: "üå∫", tagline: "Island paradise awaits" },
            { name: "Paris", emoji: "üóº", tagline: "City of lights and romance" },
            { name: "Iceland", emoji: "üèîÔ∏è", tagline: "Land of fire and ice" },
            { name: "New York", emoji: "üèôÔ∏è", tagline: "The city that never sleeps" },
            { name: "Morocco", emoji: "üïå", tagline: "Spices and Sahara dreams" },
            { name: "Thailand", emoji: "üõ∫", tagline: "Tropical paradise vibes" },
            { name: "Switzerland", emoji: "üèîÔ∏è", tagline: "Alpine peaks and lakes" },
            { name: "Australia", emoji: "ü¶ò", tagline: "Outback and coastal wonders" },
            { name: "Brazil", emoji: "üå¥", tagline: "Samba and beach magic" },
            { name: "Egypt", emoji: "üè∫", tagline: "Ancient wonders await" },
            { name: "India", emoji: "üïå", tagline: "Colors and incredible culture" },
            { name: "Norway", emoji: "ü¶å", tagline: "Fjords and northern lights" },
            { name: "Mexico", emoji: "üåÆ", tagline: "Vibrant culture and beaches" },
            { name: "Kenya", emoji: "ü¶Å", tagline: "Safari adventures await" },
            { name: "Portugal", emoji: "üè∞", tagline: "Coastal charm and history" },
            { name: "Peru", emoji: "üèîÔ∏è", tagline: "Ancient ruins and adventures" },
            { name: "South Korea", emoji: "üèÆ", tagline: "K-culture meets mountains" },
            { name: "Turkey", emoji: "üéà", tagline: "Where East meets West" },
            { name: "Vietnam", emoji: "üõ∂", tagline: "Motorbikes and mountains" },
            { name: "Costa Rica", emoji: "ü¶ú", tagline: "Pura vida and nature" },
            { name: "Jordan", emoji: "üèúÔ∏è", tagline: "Desert roses and treasures" },
            { name: "Ireland", emoji: "üçÄ", tagline: "Emerald landscapes" },
            { name: "Dubai", emoji: "üèóÔ∏è", tagline: "Modern desert marvels" },
            { name: "Maldives", emoji: "üèñÔ∏è", tagline: "Crystal waters and bliss" },
            { name: "Chile", emoji: "üç∑", tagline: "Wine valleys and landscapes" },
            { name: "Nepal", emoji: "üèîÔ∏è", tagline: "Himalayan heights" },
            { name: "Cuba", emoji: "üöó", tagline: "Vintage Caribbean soul" },
            { name: "Indonesia", emoji: "üåã", tagline: "Endless island adventures" }
        ];

        const gradients = [
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
            "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
            "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)",
            "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
            "linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%)",
            "linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)",
            "linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)",
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "linear-gradient(135deg, #30cfd0 0%, #91a7ff 100%)"
        ];

        let currentDestination = null;
        let discoveryCount = 0;

        function generateDestination() {
            const randomDestination = destinations[Math.floor(Math.random() * destinations.length)];
            const randomGradient = gradients[Math.floor(Math.random() * gradients.length)];
            
            currentDestination = randomDestination;
            discoveryCount++;
            
            const visual = document.getElementById('destinationVisual');
            const emoji = visual.querySelector('.destination-emoji');
            const name = visual.querySelector('.destination-name');
            const tagline = visual.querySelector('.destination-tagline');
            const counter = document.getElementById('counter');
            
            // Add animation
            visual.style.transform = 'scale(0.95)';
            visual.style.opacity = '0.7';
            
            setTimeout(() => {
                // Update content
                emoji.textContent = randomDestination.emoji;
                name.textContent = randomDestination.name;
                name.classList.remove('placeholder');
                tagline.textContent = randomDestination.tagline;
                tagline.classList.remove('placeholder');
                
                // Update gradient
                visual.style.background = randomGradient;
                
                // Animate back
                visual.style.transform = 'scale(1)';
                visual.style.opacity = '1';
                visual.style.transition = 'all 0.3s ease';
                
                // Update counter
                counter.textContent = `Destinations discovered: ${discoveryCount}`;
                
                // Add celebration effect
                if (discoveryCount % 5 === 0) {
                    showCelebration();
                }
            }, 150);
        }

        function shareDestination(event) {
            event.stopPropagation();
            if (!currentDestination) {
                alert('Generate a destination first!');
                return;
            }
            
            const shareText = `üåç My next adventure: ${currentDestination.name}! ${currentDestination.emoji} ${currentDestination.tagline}`;
            
            // Update share links
            const encodedText = encodeURIComponent(shareText);
            const url = encodeURIComponent(window.location.href);
            
            document.getElementById('shareInstagram').href = `https://www.instagram.com/`;
            document.getElementById('shareFacebook').href = `https://www.facebook.com/sharer/sharer.php?u=${url}&quote=${encodedText}`;
            document.getElementById('shareTwitter').href = `https://twitter.com/intent/tweet?text=${encodedText}`;
            document.getElementById('shareWhatsApp').href = `https://wa.me/?text=${encodedText}`;
            
            document.getElementById('shareModal').style.display = 'flex';
        }

        function copyToClipboard(event) {
            event.stopPropagation();
            if (!currentDestination) {
                alert('Generate a destination first!');
                return;
            }
            
            const shareText = `üåç My next adventure: ${currentDestination.name}! ${currentDestination.emoji} ${currentDestination.tagline}`;
            
            navigator.clipboard.writeText(shareText).then(() => {
                showNotification('Copied to clipboard!');
            });
        }

        function saveImage(event) {
            event.stopPropagation();
            if (!currentDestination) {
                alert('Generate a destination first!');
                return;
            }
            
            showNotification('Take a screenshot to save!');
        }

        function closeShareModal() {
            document.getElementById('shareModal').style.display = 'none';
        }

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: #4ecdc4;
                color: white;
                padding: 15px 20px;
                border-radius: 25px;
                font-weight: bold;
                z-index: 1001;
                animation: slideIn 0.3s ease;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        function showCelebration() {
            const celebration = document.createElement('div');
            celebration.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 3em;
                z-index: 1001;
                animation: celebrate 1s ease;
                pointer-events: none;
            `;
            celebration.textContent = 'üéâ‚ú®üåü';
            document.body.appendChild(celebration);
            
            setTimeout(() => {
                celebration.remove();
            }, 1000);
        }

        // Add CSS animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            
            @keyframes celebrate {
                0% { transform: translate(-50%, -50%) scale(0); opacity: 0; }
                50% { transform: translate(-50%, -50%) scale(1.2); opacity: 1; }
                100% { transform: translate(-50%, -50%) scale(1); opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        // Close modal when clicking outside
        document.getElementById('shareModal').addEventListener('click', (e) => {
            if (e.target.id === 'shareModal') {
                closeShareModal();
            }
        });
    </script>
</body>
